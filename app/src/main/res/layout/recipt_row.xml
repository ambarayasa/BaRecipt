<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/foodImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/imgfood"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/resep_nama_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Nama Resep"
                    android:textColor="@color/orange"
                    android:textSize="19sp"
                    android:fontFamily="@font/latobold"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resep_pilihan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Masakan Bali"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/resep_lama_masakan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/resep_status_lama_masakan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/resep_jenis_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/resep_langkah_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/resep_bahan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:fontFamily="@font/latoreguler"
                    android:textStyle="normal"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_edit_note_24"
            android:visibility="visible"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="right"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>